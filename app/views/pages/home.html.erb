<script>
  function imgResize() {
    <% @posts.each do |post| %>
      var width<%= post.id %> = document.getElementById('post-img-<%= post.id %>').width;
      document.getElementById('post-img-<%= post.id %>').height = (width<%= post.id %> / 2.75);
    <% end %>
  }
  imgResize();
  window.addEventListener('resize', function(event){
    imgResize();
  });
</script>
