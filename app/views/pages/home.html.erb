<section id="offers">
  <% if Offer.where(active: true).count > 0 %>
    <div class="py-5 text-center">
      <div class="d-flex justify-content-center mb-3">
        <%= image_tag 'bullhorn', class: 'mr-3', alt: 'bullhorn', style: 'width: 30px;' %>
        <p class="mb-0" style="font-size: 20px;">Staff's pick</p>
      </div>
      <h1><%= @offer.name %></h1><br>
      <h6><%= @offer.description.gsub(/\n/, '<br/>').html_safe %></h6>
      <div class="swiper-container mt-5" id="offer-slider-desktop">
        <div class="swiper-wrapper d-flex justify-content-between" style="transition-timing-function: linear !important;">
          <% @offer.offer_services.each do |service| %>
            <div class="swiper-slide" style="flex: 0 0 20%;">
              <a href="services/<%= service.service.id %>">
                <% if service.photo.attached? %>
                  <img src="<%= cdn_for(service.photo) %>">
                <% elsif service.service.practitioner.user.cropped_image %>
                  <img src="<%= cdn_for(service.service.practitioner.user.cropped_image) %>">
                <% else %>
                  <%= image_tag 'profile.png' %>
                <% end %>
              </a>
              <div class="text-left">
                <p class="my-2 offer-service"><%= service.service.name %></p>
                <p class="offer-practitioner"><%= service.service.practitioner.user.full_name %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="swiper-container mt-4" id="offer-slider-mobile">
        <div class="swiper-wrapper d-flex justify-content-between">
          <% @offer.offer_services.each do |service| %>
            <div class="swiper-slide">
              <a href="services/<%= service.service.id %>">
                <% if service.photo.attached? %>
                  <img src="<%= cdn_for(service.photo) %>">
                <% elsif service.service.practitioner.user.cropped_image %>
                  <img src="<%= cdn_for(service.service.practitioner.user.cropped_image) %>">
                <% else %>
                  <%= image_tag 'profile.png' %>
                <% end %>
              </a>
              <div class="text-left">
                <p class="my-1 offer-service"><%= service.service.name %></p>
                <p class="offer-practitioner"><%= service.service.practitioner.user.full_name %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</section>
