<section id="newsletter">
  <div class='d-flex justify-content-center my-4 text-center'>
    <div class="col-10">
      <% if !(user_signed_in? && current_user.newsletter) %>
        <h2>Sign up to our newsletter stay updated</h2>
        <p>We respect your privacy.</p>
        <%= simple_form_for([@newsletter], remote: true) do |f| %>
          <div class='d-flex justify-content-center text-center my-5'>
            <div class="form-group email required newsletter_email" style="width: 50%; margin-bottom: 0;">
              <input class="form-control string email required input-newsletter" placeholder="someone@example.com" type="email" name="newsletter[email]" id="newsletter_email">
            </div>
            <%= f.button :submit, 'Submit', class: 'btn-flat btn-newsletter' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
