<section id='top-banner'>
  <%= render 'top_banner' %>
</section>
<section id='featured-practitioners'>
  <div class='d-flex justify-content-center my-4 text-center'>
    <div class='container' id='featured-practitioners-desktop'>
      <h2>Our Featured Practitioners</h2>
      <div class='cards-featured'>
        <% @practitioners.first(4).each do |practitioner| %>
          <div class='card-featured'>
            <a href="/practitioners/<%= practitioner.id %>">
              <% if practitioner.user.photo.attached? %>
                <%= image_tag practitioner.user.photo %>
              <% else %>
                <%= image_tag("profile") %>
              <% end %>
            </a>
              <a href="/practitioners/<%= practitioner.id %>">
                <h2><%= practitioner.user.full_name %></h2>
              </a>
            <div class='card-featured-infos'>
              <p><%= practitioner.title %></p>
              <p>Specialized in:</p>
              <div class="d-flex" style="flex-wrap: wrap;">
                <% practitioner.specialties.first(3).each do |specialty| %>
                  <div class="featured-practitioners-specialty"><%= link_to specialty.name, specialty_path(specialty) %></div>
                <% end %>
                <a href="/practitioners/<%= practitioner.id %>" style="margin: 0 auto;"><p>and more</p></a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="container" id="featured-practitioners-mobile">
      <h2>Our Featured Practitioners</h2>
      <div class="swiper-container" id="practitioners-swiper">
        <div class="swiper-wrapper">
          <% @practitioners.first(4).each do |practitioner| %>
          <div class="swiper-slide">
            <div class='card-featured'>
              <a href="/practitioners/<%= practitioner.id %>">
                <% if practitioner.user.photo.attached? %>
                  <%= image_tag practitioner.user.photo %>
                <% else %>
                  <%= image_tag("profile") %>
                <% end %>
              </a>
                <a href="/practitioners/<%= practitioner.id %>">
                  <h2><%= practitioner.user.full_name %></h2>
                </a>
              <div class='card-featured-infos'>
                <p><%= practitioner.title %></p>
                <p>Specialized in:</p>
                <div class="d-flex" style="flex-wrap: wrap;">
                  <% practitioner.specialties.first(3).each do |specialty| %>
                    <div class="featured-practitioners-specialty"><%= link_to specialty.name, specialty_path(specialty) %></div>
                  <% end %>
                  <a href="/practitioners/<%= practitioner.id %>" style="margin: 0 auto;"><p>and more</p></a>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
