<% content_for :home_navbar do %>
  <%= render 'shared/home_navbar' %>
<% end %>
<section id='top-banner'>
  <%= render 'top_banner' %>
</section>
<section id='featured-practitioners'>
  <div class='d-flex justify-content-center my-4 text-center'>
    <div class='col-10'>
      <h2>Featured Practitioners</h2>
      <div class='cards-featured'>
        <% @practitioners.first(3).each do |practitioner| %>
          <div class='card-featured'>
            <a href="/practitioners/<%= practitioner.id %>">
              <% if practitioner.user.photo.attached? %>
                <%= cl_image_tag practitioner.user.photo.key %>
              <% else %>
                <img src='https://kitt.lewagon.com/placeholder/users/random' />
              <% end %>
            </a>
            <div class='card-featured-infos'>
              <a href="/practitioners/<%= practitioner.id %>">
                <h2><%= practitioner.user.full_name %></h2>
              </a>
              <p id="bio-<%= practitioner.id %>"><%= practitioner.bio.gsub(/\n/, '<br/>').html_safe %></p>
              <%= link_to 'See more', practitioner_path(practitioner) %>
            </div>
          </div>
        <% end %>
      </div>
      <div class='cards-review'>
        <div class='card-review' style='background-image: url(https://kitt.lewagon.com/placeholder/users/fanny-rojon)'>
          <div class='name'>
            <h3>Diana</h3>
          </div>
          <div class='review'>
            <p>Awesome!</p>
          </div>
        </div>
        <div class='card-review' style='background-image: url(https://kitt.lewagon.com/placeholder/users/rosemaryakl)'>
          <div class='name'>
            <h3>Janet</h3>
          </div>
          <div class='review'>
            <p>Superb!</p>
          </div>
        </div>
        <div class='card-review' style='background-image: url(https://kitt.lewagon.com/placeholder/users/primaulia)'>
          <div class='name'>
            <h3>Sangsoo</h3>
          </div>
          <div class='review'>
            <p>It rocks!</p>
          </div>
        </div>
      </div>
      <div class='text-center'>
        <%= link_to "Find a service now", services_path, class: 'btn btn-flat' %>
      </div>
    </div>
  </div>
</section>
<section id='middle-banner'>
  <%= render 'middle_banner' %>
  <div class='d-flex justify-content-center text-center'>
    <div class='col-10'>
      <div class='cards-practitioner'>
        <div class='card-practitioner'>
          <img src='https://kitt.lewagon.com/placeholder/users/anya91m' />
          <div class='card-practitioner-infos'>
            <h2>Diana Choi</h2>
            <p>Charming and well located. Don’t miss it!  You’ll never forget this amazing experience.</p>
            <%= link_to 'View profile', '', class: 'btn btn-ghost view-btn' %>
          </div>
        </div>
        <div class='card-practitioner'>
          <img src='https://kitt.lewagon.com/placeholder/users/MohamedDiarra' />
            <div class='card-practitioner-infos'>
            <h2>Janet Lam</h2>
            <p>Charming and well located. Don’t miss it!  You’ll never forget this amazing experience.</p>
            <%= link_to 'View profile', '', class: 'btn btn-ghost view-btn' %>
          </div>
        </div>
        <div class='card-practitioner'>
          <img src='https://kitt.lewagon.com/placeholder/users/shuomazurkas' />
            <div class='card-practitioner-infos'>
            <h2>Sangsoo Ra</h2>
            <p>Charming and well located. Don’t miss it!  You’ll never forget this amazing experience.</p>
            <%= link_to 'View profile', '', class: 'btn btn-ghost view-btn' %>
          </div>
        </div>
        <div class='card-practitioner'>
          <img src='https://kitt.lewagon.com/placeholder/users/mironfritz' />
            <div class='card-practitioner-infos'>
            <h2>Ankit Walani</h2>
            <p>Charming and well located. Don’t miss it!  You’ll never forget this amazing experience.</p>
            <%= link_to 'View profile', '', class: 'btn btn-ghost view-btn' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='d-flex justify-content-center text-center'>
    <div class="col-10">
      <% if !(user_signed_in? && current_user.newsletter) %>
        <h2>Sign up to our newsletter stay updated</h2>
        <p>We respect your privacy.</p>
        <%= simple_form_for([@newsletter], remote: true) do |f| %>
          <div class='d-flex justify-content-center text-center my-5'>
            <div class="form-group email required newsletter_email" style="width: 50%; margin-bottom: 0;">
              <input class="form-control string email required input-newsletter" placeholder="someone@example.com" type="email" name="newsletter[email]" id="newsletter_email">
            </div>
            <%= f.button :submit, 'Submit', class: 'btn-flat btn-newsletter' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
<section id='bottom-banner'>
  <%= render 'bottom_banner' %>
</section>
