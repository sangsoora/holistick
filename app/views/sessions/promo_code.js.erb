let html = '';
<% if @promo %>
  <% if @promo.active %>
    <% if (@promo.service && (@promo.service == @session.service)) || !@promo.service %>
      <% if @promo.expires_at %>
        <% if @promo.expires_at > Time.current %>
          html = '<p style="color: green;"><em><small>This promotion/coupon code has been successfully applied!</small></em></p>';
          document.getElementById('promo_status').value = 'success';
          <% if @promo.detail.include?('%') %>
            document.getElementById('selected_discount_amount').value = <%= @promo.detail.split('%').first %>;
            document.getElementById('selected_discount_type').value = 'percentage';
          <% else %>
            document.getElementById('selected_discount_amount').value = <%= @promo.detail.split('$').first %>;
            document.getElementById('selected_discount_type').value = 'dollar';
          <% end %>
        <% else %>
          html = '<p style="color: red;"><em><small>This promotion/coupon code has been expired!</small></em></p>';
          document.getElementById('promo_status').value = 'fail';
        <% end %>
      <% else %>
        html = '<p style="color: green;"><em><small>This promotion/coupon code has been successfully applied!</small></em></p>';
        document.getElementById('promo_status').value = 'success';
        <% if @promo.detail.include?('%') %>
          document.getElementById('selected_discount_amount').value = <%= @promo.detail.split('%').first %>;
          document.getElementById('selected_discount_type').value = 'percentage';
        <% else %>
          document.getElementById('selected_discount_amount').value = <%= @promo.detail.split('$').first %>;
          document.getElementById('selected_discount_type').value = 'dollar';
        <% end %>
      <% end %>
    <% elsif @promo.service && (@promo.service != @session.service) %>
      html = '<p style="color: red;"><em><small>This promotion/coupon code cannot be used with this service!</small></em></p>';
      document.getElementById('promo_status').value = 'fail';
    <% end %>
  <% else %>
    html = '<p style="color: red;"<em><small>This promotion/coupon code has been already used!</small></em></p>';
    document.getElementById('promo_status').value = 'fail';
  <% end %>
<% else %>
  html = '<p style="color: red;"><em><small>This promotion/coupon code does not exist!</small></em></p>';
  document.getElementById('promo_status').value = 'fail';
<% end %>
document.getElementById('promo-code-msg').innerHTML = html;


