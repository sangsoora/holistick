$("#languages-list").html('<%= j render "practitioner_languages_list", practitioner: @practitioner %>');
$("#languages_form").html('<%= j render "update_form", practitioner: @practitioner, languages: @languages %>');
$("#progress").html('<%= j render  "practitioners/profile_progress_bar", practitioner: @practitioner %>');
document.getElementById('practitioner-languages').style.display = 'block';
document.getElementById('languages_form').style.display = 'none';
document.getElementById('languages-edit').style.display = 'block';
document.getElementById('languages-edit').addEventListener('click', (e) => {
  e.preventDefault();
  document.getElementById('practitioner-languages').style.display = 'none';
  document.getElementById('languages_form').style.display = 'flex';
  document.getElementById('languages-edit').style.display = 'none';
})
document.getElementById('languages-cancel').addEventListener('click', (e) => {
  e.preventDefault();
  document.getElementById('practitioner-languages').style.display = 'block';
  document.getElementById('languages_form').style.display = 'none';
  document.getElementById('languages-edit').style.display = 'block';
})
$('.language-choice').on("click", function (e){
  const active = document.querySelector('.active');
  e.currentTarget.classList.toggle('active');
  if (active !== null) {
    active.classList.remove('active');
  }
});
<% if @practitioner_language.errors.empty? %>
  <% flash[:notice] = 'Language has been added.' %>
  $("#flashes").html('<%= j render partial: "shared/flashes", locals: { notice: flash[:notice] } %>');
<% else %>
  $("#flashes").html('<%= j render partial: "shared/flashes", locals: { alert: flash[:alert] } %>');
<% end %>
$(function() {
  setTimeout(function(){
    $('.alert').slideUp(500);
  }, 2000);
});
if (document.querySelector('.tooltip')) {
  document.querySelector('.tooltip').remove();
}
