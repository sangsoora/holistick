<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header justify-content-center">
      <h5 class="modal-title" id="passwordModalLabel">Change Password</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= simple_form_for(resource, url: registration_path(resource), html: { method: :put, id: :password_form }) do |f| %>
        <div class="form-group password required user_current_password">
          <label class="password required" for="old-password">Current Password <abbr title="required">*</abbr></label>
          <input class="form-control password required" autocomplete="current-password" id="old-password" required="required" aria-required="true" type="password" name="user[current_password]">
          <a class="password-control">Show password</a>
          <small class="form-text text-muted">Please confirm your current password to change it</small>
        </div>
        <div class="form-group password required user_password">
          <label class="password required" for="password1">New Password <abbr title="required">*</abbr></label>
          <input class="form-control password required" autocomplete="new-password" id="password1" required="required" aria-required="true" type="password" name="user[password]">
          <a class="password-control">Show password</a>
          <small class="form-text text-muted">Password should have more than 8 characters including 1 lowercase letter, 1 uppercase letter, 1 number and 1 special character</small>
        </div>
        <div class="form-group password required user_password_confirmation">
          <label class="password required" for="password2">Password Confirmation <abbr title="required">*</abbr></label>
          <input class="form-control password required" autocomplete="new-password" id="password2" required="required" aria-required="true" type="password" name="user[password_confirmation]">
          <a class="password-control">Show password</a>
          <small class="form-text text-muted"></small>
        </div>
        <%#= f.input :current_password,
                    hint: "Please confirm your current password to change it",
                    required: true,
                    label: 'Current Password',
                    input_html: { autocomplete: "current-password", id: "old-password" } %>
        <%#= f.input :password,
                    hint: "Password should have more than 8 characters including 1 lowercase letter, 1 uppercase letter, 1 number and 1 special character",
                    required: true,
                    label: 'New Password',
                    input_html: { autocomplete: "new-password", id: "password1" } %>
        <%#= f.input :password_confirmation,
                    hint: "",
                    required: true,
                    label: 'Password Confirmation',
                    input_html: { autocomplete: "new-password", id: "password2" } %>
        <div class="modal-btns">
          <%= f.button :submit, "Update", class: 'btn-flat' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
