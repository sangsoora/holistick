if ('<%= @param.keys.first %>' == "first_name") {
  name.style.display = 'flex';
  nameForm.style.display = 'none';
  nameEdit.style.display = 'block';
  document.getElementById('name').innerHTML = '<%= @user.full_name %>'
} else if ('<%= @param.keys.first %>' == "phone_number") {
  phone.style.display = 'flex';
  phoneForm.style.display = 'none';
  phoneEdit.style.display = 'block';
  document.getElementById('phone').innerHTML = '<%= @user.phone_number %>'
}
<% if @user.errors.any? %>
  <% flash[:alert] = 'Something went wrong! Please try again!' %>
  $("#flashes").html('<%= j render partial: "shared/flashes", locals: { alert: flash[:alert] } %>');
<% else %>
  <% flash[:notice] = 'Your personal profile has been updated!' %>
  $("#flashes").html('<%= j render partial: "shared/flashes", locals: { notice: flash[:notice] } %>');
<% end %>
