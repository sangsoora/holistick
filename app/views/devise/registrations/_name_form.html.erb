<%= simple_form_for(resource, url: registration_path(resource), remote: true, html: { method: :put, id: :name_form, style: 'display: none; align-items: center;' }) do |f| %>
  <div class="d-flex justify-content-between">
    <div style="flex: 0 0 45%"><%= f.input :first_name, require: true, label: false %></div>
    <div style="flex: 0 0 45%"><%= f.input :last_name, require: true, label: false %></div>
  </div>
  <button type="submit" data-toggle="tooltip" data-placement="bottom" data-original-title="Save"><i class='fas fa-check'></i></button>
  <button id='name-cancel' data-toggle="tooltip" data-placement="bottom" data-original-title="Cancel"><%= link_to '', '', class: 'fas fa-times' %></button>
<% end %>
