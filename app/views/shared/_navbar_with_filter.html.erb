<div class="navbar navbar-expand-sm navbar-light navbar-holistic fixed-top">
  <div class="d-flex align-items-center">
    <a class="navbar-brand" href="/"><%= image_tag('logo', alt: 'The Holistic Panda') %></a>
    <%= simple_form_for :search, url: services_path, method: "GET", html: { id: 'top-filter-form' } do |f| %>
      <div class="d-flex align-items-center">
        <fieldset class="form-group mr-4 check_boxes required search_health_goal">
          <% if params[:search] && params[:search][:health_goal] && params[:search][:health_goal].length > 1 %>
            <legend class="btn btn-ghost btn-filter" id="health-goal-pop">Health Goals (<%= params[:search][:health_goal].reject(&:blank?).count %>)&nbsp;&nbsp;<i class="fas fa-chevron-down"></i></legend>
          <% else %>
            <legend class="btn btn-ghost btn-filter" id="health-goal-pop">Choose Health Goals&nbsp;&nbsp;<i class="fas fa-chevron-down"></i></legend>
          <% end %>
          <div class="health-goal-select-box" id="health-goal-select-box">
            <div class="health-goal-choices">
              <% HealthGoal.all.sort_by(&:name).each do |goal| %>
                <% if params[:search] && params[:search][:health_goal] %>
                  <% if params[:search][:health_goal].include?((goal.id).to_s) %>
                    <input class="form-check-input check_boxes required hidden" type="checkbox" value="<%= goal.id %>" name="search[health_goal][]" id="search_health_goal_<%= goal.id %>" checked><label class="form-check-label collection_check_boxes health-goal-choice active" for="search_health_goal_<%= goal.id %>"><%= goal.name %></label>
                  <% else %>
                    <input class="form-check-input check_boxes required hidden" type="checkbox" value="<%= goal.id %>" name="search[health_goal][]" id="search_health_goal_<%= goal.id %>"><label class="form-check-label collection_check_boxes health-goal-choice" for="search_health_goal_<%= goal.id %>"><%= goal.name %></label>
                  <% end %>
                <% else %>
                  <input class="form-check-input check_boxes required hidden" type="checkbox" value="<%= goal.id %>" name="search[health_goal][]" id="search_health_goal_<%= goal.id %>"><label class="form-check-label collection_check_boxes health-goal-choice" for="search_health_goal_<%= goal.id %>"><%= goal.name %></label>
                <% end %>
              <% end %>
              <input type="hidden" name="search[health_goal][]" value="">
            </div>
            <div class="d-flex justify-content-between pt-3">
              <%= link_to "Reset", services_path, class: 'btn btn-ghost' %>
              <%= f.submit "Apply", class: "btn btn-flat" %>
            </div>
          </div>
        </fieldset>
      </div>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.practitioner %>
          <li class="nav-item btn-group">
            <a class="dropdown-toggle nav-link" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bell"></i>
                <span class="unread-count" id="unread-count">
                  <%= @notifications.length if @notifications.present? %>
                </span>
            </a>
            <div class="dropdown-menu notification-drop" aria-labelledby="dropdownMenu1">
              <% if @notifications.present? %>
                <% @notifications.first(10).each do |notification| %>
                  <%= link_to notification.actor.full_name + " " + notification.action, notification_path(notification), method: :patch || :put, class: 'dropdown-item' %>
                <% end %>
              <% end %>
              <%= link_to 'See All', user_notifications_path(current_user), class: 'dropdown-item text-center all' %>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to 'My sessions', user_sessions_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'My favorites', user_favorites_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Welcome, <%= current_user.first_name %></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.conversations.present? %>
                <%= link_to 'Messages', conversation_path(current_user.last_conversation), class: "dropdown-item" %>
              <% end %>
              <%= link_to 'View my page', practitioner_path(current_user.practitioner), class: "dropdown-item" %>
              <%= link_to 'My account', practitioner_profile_path(current_user.practitioner), class: "dropdown-item" %>
              <%= link_to 'My services', practitioner_services_path(current_user.practitioner), class: 'dropdown-item' %>
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Become a practitioner', become_a_practitioner_path, class: "nav-link" %>
          </li>
          <li class="nav-item btn-group">
            <a class="dropdown-toggle nav-link" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bell"></i>
                <span class="unread-count" id="unread-count">
                  <%= @notifications.length if @notifications.present? %>
                </span>
            </a>
            <div class="dropdown-menu notification-drop" aria-labelledby="dropdownMenu1">
              <% if @notifications.present? %>
                <% @notifications.first(10).each do |notification| %>
                  <%= link_to notification.actor.full_name + " " + notification.action, notification_path(notification), method: :patch || :put, class: 'dropdown-item' %>
                <% end %>
              <% end %>
              <%= link_to 'See All', user_notifications_path(current_user), class: 'dropdown-item text-center all' %>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to 'My sessions', user_sessions_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'My favorites', user_favorites_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Welcome, <%= current_user.first_name %></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.conversations.present? %>
                <%= link_to 'Messages', conversation_path(current_user.last_conversation), class: "dropdown-item" %>
              <% end %>
              <%= link_to 'My account', user_path(current_user), class: "dropdown-item" %>
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      <% else %>
        <li class="nav-item">
          <%= link_to "Become a practitioner", become_a_practitioner_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<script>
  const healthGoalSelectBoxBtn = document.getElementById('health-goal-pop');
  const healthGoalSelectBox = document.getElementById('health-goal-select-box');
  healthGoalSelectBoxBtn.addEventListener('click', () => {
    healthGoalSelectBoxBtn.classList.toggle('btn-opened');
    healthGoalSelectBox.classList.toggle('opened');
  });
  document.addEventListener('click', function(event) {
    const healthGoalBoxClick = healthGoalSelectBox.contains(event.target);
    const healthGoalBtnClick = healthGoalSelectBoxBtn.contains(event.target);
    if (healthGoalSelectBox.classList.contains('opened') && (!healthGoalBoxClick) && (!healthGoalBtnClick)) {
      healthGoalSelectBoxBtn.classList.remove('btn-opened');
      healthGoalSelectBox.classList.remove('opened');
    }
  });
</script>
