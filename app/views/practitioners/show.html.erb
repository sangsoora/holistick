<div class="container" style="margin-top: 5rem;">
  <div class="row">
    <div class="col-8 offset-2 text-center">
      <div class="d-flex justify-content-center">
        <%= image_tag("#{@practitioner.user.email.split('@').first}", style: 'width:80%;') %>
      </div>
      <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @practitioner.video %>?autoplay=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <h1><%= @practitioner.user.full_name %></h1>
      <%= link_to 'Book a session', '' %>
      <% @practitioner.practitioner_languages.each do |l| %>
        <p><%= l.language.language %></p>
      <% end %>
      <% @practitioner.practitioner_specialties.each do |s| %>
        <p><%= s.specialty.name %></p>
      <% end %>
      <% @practitioner.services.each do |service| %>
        <p><%= service.name %></p>
        <p><%= service.description %></p>
      <% end %>
      <p><%= @practitioner.user.email %></p>
      <p><%= @practitioner.user.phone_number %></p>
      <p><%= @practitioner.location %></p>
      <p><%= @practitioner.address %></p>
      <p><%= @practitioner.bio %></p>
    </div>
  </div>
</div>
