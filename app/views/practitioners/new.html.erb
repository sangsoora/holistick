<div class="container become-practitioner">
  <h1>Become a practitioner</h1>
  <%= link_to 'Apply', '', data: { toggle: "modal", target: "#practitionerModal" }, class: 'btn btn-flat' %>
  <%= simple_form_for [current_user, @practitioner] do |f| %>

  <% end %>
</div>

<div class="modal fade" id="practitionerModal" tabindex="-1" role="dialog" aria-labelledby="practitionerModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="practitionerModalLabel">Become a practitioner</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-left">
        <%= simple_form_for [current_user, @practitioner] do |f| %>
          <%= f.input :address %>
          <%= f.input :education %>
          <%= f.input :experience, collection: ['Less than 1 year', '2-5 years', '5-10 years', 'More than 10 years'], as: :select, require: true %>
          <div class="form-group">
            <label for="practitioner_language_1">Session languages</label>
            <select class="form-control select required" name="practitioner[language]" id="practitioner_language_1">
              <% Language.all.each do |l| %>
                <option value="<%= l.language %>"><%= l.language %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="practitioner_specialty_1">Session specialtiess</label>
            <select class="form-control select required" name="practitioner[specialty]" id="practitioner_specialty_1">
              <% Specialty.all.each do |specialty| %>
                <option value="<%= specialty.name %>"><%= specialty.name %></option>
              <% end %>
            </select>
          </div>
      </div>
      <div class="modal-footer">
          <%= f.button :submit, 'Confirm', class: 'btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
