<div class="container payment-page">
  <div class="payment-box align-items-center">
    <h1>Checkout summary</h1>
    <p class="mb-0"><%= @practitioner.user.full_name %>'s Onboarding Fee for <strong>CA <%= humanized_money_with_symbol @practitioner.amount %>.</strong></p>
    <button id="pay" class="btn btn-flat">Pay</button>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
      const paymentButton = document.getElementById('pay');
      paymentButton.addEventListener('click', () => {
        const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
        stripe.redirectToCheckout({
          sessionId: '<%= @practitioner.checkout_session_id %>'
        });
      });
    </script>
  </div>
</div>
