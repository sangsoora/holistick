<div class="container bookings">
  <h1>Confirmed bookings</h1>
  <% @confirmed_bookings.each do |booking| %>
    <p><%= link_to booking.service.name, session_path(booking) %></p>
    <p><%= booking.start_time %></p>
    <p><%= booking.end_time %></p>
    <p><%= humanized_money_with_symbol(booking.amount) %></p>
    <p><%= booking.service.practitioner.user.full_name %></p>
    <p><%= booking.service.service_type %></p>
  <% end %>
  <h1>Pending bookings</h1>
  <% @pending_bookings.each do |booking| %>
    <p><%= link_to booking.service.name, session_path(booking) %></p>
    <p><%= booking.start_time %></p>
    <p><%= booking.end_time %></p>
    <p><%= humanized_money_with_symbol(booking.amount) %></p>
    <p><%= booking.service.practitioner.user.full_name %></p>
    <p><%= booking.service.service_type %></p>
  <% end %>
</div>
