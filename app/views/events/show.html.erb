<% content_for :home_navbar do %>
  <%= render 'shared/home_navbar' %>
<% end %>
<div class="container event-page">
  <div class="page-title">
    <h2><%= @event.name %></h2>
  </div>
  <div class="text-center">
    <%= image_tag('event', class: 'event-image') %>
    <div class="mt-3">
      <p><%= @event.description %></p>
      <p>By <%= link_to @event.user.full_name, practitioner_path(@event.user.practitioner) %></p>
      <% if user_signed_in? %>
        <p><%= @event.start_time.in_time_zone(current_user.timezone).strftime('%a, %b %d, %Y %l:%M %p %Z') %></p>
      <% else %>
        <p><%= @event.start_time.in_time_zone(event.user.timezone).strftime('%a, %b %d, %Y %l:%M %p %Z') %></p>
      <% end %>
      <p><a href="<%= @event.link %>"><%= @event.link %></a></p></p>
      <%= link_to 'Attend Event', '', class: 'btn btn-flat' %>
    </div>
  </div>
</div>
