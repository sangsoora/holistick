<% if FavoriteService.find_by(user: current_user, service: service) %>
  <a data-confirm="Are you sure?" class="btn btn-ghost" rel="nofollow" data-method="delete" data-remote="true" href="/favorite_services/<%= FavoriteService.find_by(user: current_user, service: service).id %>"><i class="fas fa-heart pink-icon"></i></a>
<% else %>
  <a class="btn btn-ghost" rel="nofollow" data-method="post" data-remote="true" href="/services/<%= service.id %>/favorite_services"><i class="far fa-heart pink-icon"></i></a>
<% end %>
